{
  "extends": "solium:all",
  "plugins": [
    "security", "zeppelin"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "warning",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "error-reason": "error",
    "operator-whitespace": "warning",
    "zeppelin/missing-natspec-comments": "warning",
    "security/no-inline-assembly": "warning"
  }
}
